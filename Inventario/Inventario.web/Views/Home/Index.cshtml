@model List<Inventario.BL.Producto>

@{
    ViewBag.Title = "Inicio";
}


<section class="story-area left-text center-sm-text">
    <div class="container">
        <div class="heading"><h3>Nuestro inventario OBECA <br /> Juguetes</h3> 
    
        </div>
        <div class="row">
            @foreach (var producto in Model
                .Where(r=> r.Categoria.Descripcion == "juguetes")
                .Take(4)
                .OrderBy(r => Guid.NewGuid())
                )
            {

            
                <div class="col-lg-3 col-md-4  col-sm-6 ">
                    <div class="center-text mb-30">
                        <div class="ïmg-200x mlr-auto pos-relative">
                            <h6 class="ribbon-cont color-white"><div class="ribbon primary"></div><b>DISPONIBLES</b></h6>
                            <img src="@(ViewBag.adminWebsiteUrl+ producto.UrlImagen)" alt="JUGUETES">
                        </div>
                        <h5 class="mt-20">@producto.Descripcion</h5>
                        <h4 class="mt-5 color-primary"><b>L @producto.Precio</b></h4>
                    </div><!--text-center-->
                </div><!-- col-md-3 -->
            }
        </div><!-- row-->
    </div><!-- container -->
    
</section> <h3 align="center">Nuestros Articulos </h3>
